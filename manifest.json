{
  "manifest_version": 3,
  "name": "Sitemap Detector",
  "version": "1.0.0",
  "description": "Detecta si la URL actual está en el sitemap del sitio y muestra la información del sitemap",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "sitemap-detector@oel-estrada",
      "strict_min_version": "109.0"
    }
  }
}
